{
	"include": [
		"./src/**/*.ts",
	],
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"baseUrl": ".",
		"rootDir": "./src",
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"inlineSourceMap": false,
		"inlineSources": false,
		"outDir": "./dist",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"@webgpu/types"
		]
	}
}